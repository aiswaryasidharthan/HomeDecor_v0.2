@model ShoppingCartViewModel


<h2>Decor your home!!</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>&nbsp;</th>
            <th> Added Quantity </th>
            <th>Items </th>
            <th class="text-right">Price</th>
            <th class="text-right">Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
        {
<tr>
        <td class="text-left"> <a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-ShopId="@item.Shop.ShopId" alt=""> Reduce</a></td>

    <td class="text-center">@item.Amount</td>
    <td class="text-left">@item.Shop.Name</td>
    <td class="text-right">@item.Shop.Price.ToString("c")</td>
    <td class="text-right">
        @((item.Amount * item.Shop.Price).ToString("c"))
    </td>
</tr>}
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" class="text-right">Total</td>
            <td class="text-right">@Model.ShoppingCartTotal.ToString("c")</td>
        </tr>
    </tfoot>
</table>
<div class=" text-center">
    <a class=" btn btn-outline-warning" asp-controller="ShoppingCart" asp-action="ClearCart"> ClearCart </a>
    <a class=" btn btn-outline-success" asp-controller="Order" asp-action="Checkout"> Checkout </a>

</div>